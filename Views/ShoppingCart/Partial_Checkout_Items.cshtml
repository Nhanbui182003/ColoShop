@model IEnumerable<WeBanHang.Models.ShoppingCartItem>

@if (Model != null && Model.Any())
{
    <h3>Giỏ hàng<span style="float:right">@Model.Count()</span></h3>
    var i = 0;
    var tongtien = decimal.Zero;
    <div class="border border-danger">

        <table class="table">

            @foreach (var item in Model)
            {
                i++;
                tongtien += item.TotalPrice;
                <tr>
                    <td>@item.ProductName</td>
                    <td>@WeBanHang.Common.Common.FormatNumber(item.Price, 0)</td>
                </tr>
            }
            <tr>
                <td>Tổng tiền</td>
                <td>@WeBanHang.Common.Common.FormatNumber(tongtien, 0)</td>
            </tr>
        </table>
    </div>
}



