@model WeBanHang.Models.EF.Order
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">Danh sách đơn hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết đơn hàng</a>
        </li>
    </ul>
}


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-6">
                    <label>Mã đơn hàng</label>
                    <p class="form-control">@Model.Code</p>
                </div>
                <div class="form-group col-6">
                    <label>Tên khách hàng</label>
                    <p class="form-control">@Model.CustomerName</p>
                </div>
                <div class="form-group col-6">
                    <label>Tổng tiền</label>
                    <p class="form-control">@Model.TotalAmount</p>
                </div>
                <div class="form-group col-6">
                    <label>Số điện thoại</label>
                    <p class="form-control">@Model.Phone</p>
                </div>
                <div class="form-group col-6">
                    <label>Ngày tạo</label>
                    <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="form-group col-6">
                    <label>Email</label>
                    <p class="form-control">@Model.Email</p>
                </div>
                <div class="form-group col-6">
                    <label>Trạng thái</label>
                    @if (Model.Payment == 1)
                    {
                        <p class="form-control">Chưa thanh toán</p>
                    }
                    else
                    {
                        <p class="form-control">Đã thanh toán</p>

                    }
                </div>
                <div class="card-body col-12">
                    <h4 class="">Danh sách các sản phẩm</h4>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_ListProduct", "Order")
                </div>
            </div>
            
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
